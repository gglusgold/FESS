@{
    ViewBag.Title = "Entregar";
    Layout = "~/Views/Compartida/_layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h2 style="margin-top: 0px">Entregar</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <table id="tabla" class="table table-bordered bg_blanco table-hover"></table>
        </div>
    </div>
</div>

@section scripts{
    <script type="text/javascript">
        var columnas = [
               {
                   //estos son de bootstrap table
                   field: "idCompra",
                   visible: false,
               },
               {
                   field: "nombre",
                   align: 'center',
                   valign: 'middle',
                   title: "Vecino",
                   sortable: "true",
               },
               {
                   field: "productos",
                   align: 'left',
                   valign: 'middle',
                   title: "Productos",
                   sortable: "true",
               },
               {
                   field: "precio",
                   align: 'center',
                   valign: 'middle',
                   title: "Total",
               },
               {
                   field: 'retiro',
                   title: 'Retiró?',
                   valign: 'middle',
                   align: 'center',
                   width: '5%',
                   events: {
                       'click .Retiro': function (e, value, row, index) {

                           if ($(e.target).hasClass("glyphicon-remove")) {
                               $(e.target).removeClass("glyphicon-remove").addClass("glyphicon-ok");
                               $.post("/Compras/EnregarPedido", { idCompra: row.idCompra }, function (devuelta) {
                                   if (devuelta.error == true) {
                                       $(e.target).removeClass("glyphicon-ok").addClass("glyphicon-remove");
                                   }
                               });
                           }

                       }
                   },
                   formatter: function operateFormatter(value, row, index) {
                       return "<a style='cursor:pointer' class='Retiro' title='Retiro'><i class='glyphicon " + (value ? "glyphicon-ok" : "glyphicon-remove") + "'></i></a>";

                   }
               }
        ];

        var tabla = $("#tabla");
        tabla.bootstrapTable({
            url: "/Compras/ListaTanda",
            method: "POST",
            columns: columnas
        });
    </script>
}