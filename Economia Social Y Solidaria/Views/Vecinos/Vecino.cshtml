@{
    ViewBag.Title = "Vecino";
    Layout = "~/Views/Compartida/_layout.cshtml";
}

<style>
    .modal-dialog{
        width:800px!important;
    }
</style>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h2 style="margin-top: 0">Vecines</h2>
        </div>
        <div class="col-md-6">
        </div>
        <div class="col-md-12">
            <table id="tabla" class="table table-bordered bg_blanco table-hover"></table>
            <div id="abm"></div>
        </div>
    </div>
</div>

@section scripts{
    <script type="text/javascript">

        var columnas = [
               {
                   //estos son de bootstrap table
                   field: "idVecino",
                   valign: 'middle',
                   visible: false,
                   edit: true,
                   opciones: {
                       diseño: {
                           cssDiv: { display: "none" }
                       },
                   }
               },
               {
                   field: "nombres",
                   align: 'center',
                   valign: 'middle',
                   title: "Nombres",
                   sortable: "true",
               },
               {
                   field: "correo",
                   align: 'left',
                   valign: 'middle',
                   title: "Correo",
                   sortable: "true",
               },
               {
                   field: "telefono",
                   align: 'center',
                   valign: 'middle',
                   title: "Telefono",
                   sortable: "true",
               },
               {
                   field: "comuna",
                   align: 'center',
                   valign: 'middle',
                   title: "Comuna",
                   sortable: "true",
               },
               {
                   field: "administrador",
                   title: 'Administrar usuarios',
                   sortable: "true",
                   align: 'center',
                   valign: 'middle',
                   events: {
                       'click .Retiro': function (e, value, row, index) {

                           var que = $(e.target).hasClass("glyphicon-ok");
                           $(e.target).removeClass("glyphicon-remove").removeClass("glyphicon-ok")

                           $.post("/Vecinos/Editar", { idVecino: row.idVecino, administrador: !que }, function (devuelta) {
                               $(e.target).addClass(devuelta.admin ? "glyphicon-ok" : "glyphicon-remove");
                           });

                       }
                   },
                   formatter: function operateFormatter(value, row, index) {
                       return "<a style='cursor:pointer' class='Retiro' title='Administrar'><i class='glyphicon " + (value ? "glyphicon-ok" : "glyphicon-remove") + "'></i></a>";

                   }
               },
               {
                   field: "contador",
                   title: 'Finanzas',
                   sortable: "true",
                   align: 'center',
                   valign: 'middle',
                   events: {
                       'click .Retiro': function (e, value, row, index) {

                           var que = $(e.target).hasClass("glyphicon-ok");
                           $(e.target).removeClass("glyphicon-remove").removeClass("glyphicon-ok")

                           $.post("/Vecinos/Editar", { idVecino: row.idVecino, contador: !que }, function (devuelta) {
                               $(e.target).addClass(devuelta.contador ? "glyphicon-ok" : "glyphicon-remove");
                           });

                       }
                   },
                   formatter: function operateFormatter(value, row, index) {
                       return "<a style='cursor:pointer' class='Retiro' title='Finanzas'><i class='glyphicon " + (value ? "glyphicon-ok" : "glyphicon-remove") + "'></i></a>";

                   }
               },
               {
                   field: "encargado",
                   title: 'Encargado',
                   sortable: "true",
                   align: 'center',
                   valign: 'middle',
                   create: true,
                   events: {
                       'click .Retiro': function (e, value, row, index) {

                           var que = $(e.target).hasClass("glyphicon-ok");
                           $(e.target).removeClass("glyphicon-remove").removeClass("glyphicon-ok")

                           $.post("/Vecinos/Editar", { idVecino: row.idVecino, encargado: !que }, function (devuelta) {
                               $(e.target).addClass(devuelta.encargado ? "glyphicon-ok" : "glyphicon-remove");
                           });

                       }
                   },
                   formatter: function operateFormatter(value, row, index) {
                       return "<a style='cursor:pointer' class='Retiro' title='Encargado'><i class='glyphicon " + (value ? "glyphicon-ok" : "glyphicon-remove") + "'></i></a>";

                   }
               }
        ];

        var tabla = $("#tabla");
        tabla.bootstrapTable({
            url: "/Vecinos/Lista",
            method: "POST",
            columns: columnas
        });

        var abm = $("#abm").Magyp({
            nombre: "Vecines",
            fields: columnas,
            boostrap: true,
            unico: true,
            url: '/Vecinos/Crear',
            urlEditar: '/Vecinos/Editar',
            grabado: function (editando, data, index) {
                tabla.bootstrapTable("refresh");
            }
        });

        $("#AgregarNuevo").on("click", function () {
            abm.Magyp("Mostrar", false);
        });

    </script>
}